<h1 class="page-header">Categoria</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action   %>
    </div>
    <div class="panel-body">

        <div class="col-lg-6">
            <%= form_for([:backoffice,@category])  do |f|%>
                <div class="form-group">
                   <label>Descrição</label>
                   <%= f.text_field :description, class: "form-control" , placeholder: "Ex. Animal/Pet"    %>

                </div>
                <div class="form-group pull-right">
                        <%= f.button "Salvar", class:"btn btn-primary"  %>
                        <%= link_to  backoffice_categories_path, class:"btn btn-default" do  %>
                                       Voltar
                         <% end %>
                </div>
            <% end %>
        </div>
    </div>

</div>
<% if  @category.errors.any? %>
    <script>
        <%  @category.errors.full_messages.each do |messages|%>
             $.notify("<%= messages %>", "error");
        <% end %>
    </script>
<% end %>

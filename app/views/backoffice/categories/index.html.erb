<!-- Page Content -->
<h1 class="page-header">Listando Categoria

    <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle pull-right" do %>
        <i class="fa fa-plus"></i>
    <% end %>
</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        <% @categories.each do |categoria| %>
            <tr>
                <td><%= categoria.id %></td>
                <td><%= categoria.description %></td>
                <td style="width: 8.5%">
                <%= link_to edit_backoffice_category_path(categoria) , class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                <% end %>
                </button>
                <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-trash-o"></i>      </button>

                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>



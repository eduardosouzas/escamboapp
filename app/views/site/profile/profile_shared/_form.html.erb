<div class="center-block">
    <%= form_for([:site, :profile, @ad],html:{multipart: true}) do |f| %>
    <div class="row">
      <div class="col-xs-6">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:"form-control", placeholder:"Título"  %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2">
          <div class="form-group">
            <%= f.label :price %>
            <div class="input-group">
                <div class="input-group-addon">
                  <%= @ad.price.currency.symbol %>
                </div>
                <%= f.text_field :price, class:"form-control", placeholder:"Preço"  %>
            </div>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
          <div class="form-group">
            <%= f.label :category %>
            <%= f.collection_select :category_id, Category.all, :id, :description,{:prompt => "Selecione uma categoria"}, {class:"form-control"} %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2">
          <div class="form-group">
            <%= f.label :finish_date %>
            <%= f.text_field :finish_date, class:"form-control datepicker",
            value: (l(@ad.finish_date) unless @ad.finish_date.blank? )  %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
          <div class="form-group">
            <label>Imagem</label></br>
            <% if @ad.picture.present? %>
              <%= image_tag @ad.picture.url(:medium), class:"img-thumbnail" %>
            <% end %>
            </br>
            <label class="btn btn-default btn-file">
                Carregar Imagem<%= f.file_field :picture  %>
            </label>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class:"form-control", rows:10 %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
          <div class="form-group">
              <div class="panel panel-primary">
                  <div class="panel-heading">
                      Pre-Visualização
                  </div>
                  <div class="panel-body">
                        <%= md_to_html @ad.description %>
                  </div>
                  <div class="panel-footer">

                  </div>
              </div>
          </div>
      </div>
    </div>
      <%= submit_tag "Enviar", class:"btn btn-primary" %>
    <% end %>
</div>


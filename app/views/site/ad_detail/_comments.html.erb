<% @comments.each do |comment| %>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <%= rating_for_user @ad, comment.member, 'quality', star_path: '/images/ratyrate' %>
            <%= comment.member.email %>
            <span class="pull-right"><%= time_ago_in_words comment.created_at %></span>
            <p><%= comment.body %></p>
            <% if current_member && (comment.member.id == current_member.id) %>
                <%= rating_for_user @ad, current_member, "quality", star_path: '/images/ratyrate' %>
            <% end %>
        </div>
    </div>
<% end %>
